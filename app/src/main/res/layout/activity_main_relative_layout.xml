<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtLayoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="yo! i am son goku"
        android:layout_marginLeft="50dp"
        android:textSize="26sp"
        android:padding="9dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="#0d47a1"/>
    <TextView
        android:id="@+id/txtLayoutSubHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:layout_below="@id/txtLayoutHeader"
        android:layout_gravity="center"
        android:text="take a look into my new profile photo"
        android:layout_marginLeft="50dp"
        android:textSize="23sp"
        android:textStyle="italic"
        android:textColor="#ff9800"/>
    <ImageView
        android:id="@+id/imggoku"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"

        android:layout_margin="120dp"
        android:src="@drawable/img"/>
    <Button
        android:id="@+id/btnClickhere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="click me"
        android:background="#0091aa"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"/>
    <EditText
       android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter your name"
        android:layout_margin="15dp"
        android:layout_below="@id/txtLayoutSubHeader"
        android:inputType="text" />





</RelativeLayout>